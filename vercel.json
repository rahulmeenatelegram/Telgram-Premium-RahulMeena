{
  "version": 2,
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/dist/server.js" },
    {
      "source": "/((?!api/|favicon.ico|assets/).*)",
      "destination": "/index.html"
    }
  ]
}